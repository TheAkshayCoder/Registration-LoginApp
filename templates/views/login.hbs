<html lang="en">
{{header}}
<body>
    <div id="container">
       <header>Register new account</header>
       <form method="post">
          <fieldset>
             <br/>
             <input type="email" name="email" id="email" placeholder="E-mail" required>
             <br/><br/>
             <input type="password" name="password" id="password" placeholder="Password" required>
             <br/><br/>
             <label for="submit"></label>
